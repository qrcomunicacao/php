<?php
$client = new SoapClient('http://fnrhws.hospedagem.turismo.gov.br/FnrhWs/FnrhWs?wsdl');

$function = 'fnrhInserir';

$arguments = array('fnrhInserir' => array(
    'chaveAcesso' => '00000000-0000-0000-0000-00000000000',
    'fnrh' => array(
        'snnumcpf' => '', // Cadastro de pessoa física com máscara. Ex.: 000.000.000-00
        'sntipdoc' => '', // Tipo de documento do hóspede
        'snnumdoc' => '', // Número do documento do hóspede
        'snorgexp' => '', // Órgão expedidor do documento do hóspede
        'snnomecompleto' => '', // Nome completo do hóspede
        'snemail' => '', // E-mail do hóspede, apenas uma ocorrência.
        'snocupacao' => '', // Profissão do hóspede
        'snnacionalidade' => '', // Nacionalidade do hóspede.
        'sndtnascimento' => '', // Data de nascimento do hóspede, padrão americano. Ex.: yyyy-MM-dd
        'snsexo' => '', // Sexo do hóspede, campo obrigatório de preenchimento “M” ou “F”
        'sncelularddd' => '', // DDD do celular do hóspede. Somente números.
        'sncelularddi' => '', // DDI do celular do hóspede. Somente números.
        'sncelularnum' => '', // Número do celular do hóspede. Somente números.
        'sntelefoneddd' => '', // DDD do telefone do hóspede. Somente números.
        'sntelefoneddi' => '', // DDI do telefone do hóspede. Somente números.
        'sntelefonenum' => '', // Número do telefone do hóspede. Somente números.
        'snresidencia' => '', // Residência permanente do hóspede.
        'snpaisres' => '', // País de residência do hóspede.
        'snestadores' => '', // Estado de residência do hóspede.
        'sncidaderes' => '', // Cidade de residência do hóspede.
        'bgstdscpais' => '', // País de última procedência do hóspede.
        'bgstdscpaisdest' => '', // País de próximo destino do hóspede.
        'bgstdscestado' => '', // Estado de última procedência do hóspede.
        'bgstdscestadodest' => '', // Estado de próximo destino do hóspede.
        'bgstdsccidade' => '', // Cidade de última procedência do hóspede.
        'bgstdsccidadedest' => '', // Cidade de próximo destino do hóspede.
        'snmotvia' => '', // Motivo da viagem do hóspede.
        'sntiptran' => '', // Principal meio de transporte utilizado para se chegar ao destino.
        'snprevent' => '', // Previsão de entrada do hóspede no meio de hospedagem, padrão americano. Ex.: yyyy-MM-ddTHH:mm:ss
        'snprevsai' => '', // Previsão de saída do hóspede no meio de hospedagem, padrão americano. Ex.: yyyy-MM-ddTHH:mm:ss
        'snobs' => '', // Observações da FNRH.
        'snnumhosp' => '', // Número de hóspedes na unidade habitacional (UH).
        'snuhnum' => '', // Número da unidade habitacional (UH).
        'snidcidadeibgeres' => '', // Código do IBGE da cidade de residência do hóspede.
        'snidcidadeibge' => '', // Código do IBGE da cidade de última procedência do hóspede.
        'snidcidadeibgedest' => '', // Código do IBGE da cidade de próximo destino do hóspede.
)));

$options = array('location' => 'http://www.webservicex.net/ConvertTemperature.asmx');

$result = $client->__soapCall($function, $arguments, $options);

echo 'Response: ';
print_r($result);
?>


<!-- DAQUI PRA BAIXO É SÓ TESTE QUE NÃO MEXI -->

